{
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "noUncheckedIndexedAccess": true,
    "baseUrl": ".",
    "target": "esnext",
    "useDefineForClassFields": true,
    "strict": false,
    "jsx": "preserve",
    "sourceMap": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "types": [
      "node",
      "vuetify",
      "unplugin-vue-router/client"
    ],
    "paths": {
      "@@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "./**/*.ts",
    "./**/*.js",
    "./**/*.vue",
    "*.ts",
    "*.vue",
    // "/*.d.ts",
    // "/*.tsx",
    "/*.vue",
    // "auto-imports.d.ts",
    // "vite.config.mts",
    "typed-router.d.ts"
  ],
  "exclude": [
    "./node_modules/**"
  ],

}